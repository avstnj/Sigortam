
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<div class="wrapper wrapper--w680">
    <div class="card card-4">
        <div class="card-body">
            <h2 class="title">Registration Form</h2>
            <form method="POST">
                <div class="row row-space">
                    <div class="col-6">
                        <div class="input-group">
                            <label class="label">Plaka</label>
                            <input class="input--style-4" type="text" id="plaka" name="plaka">
                            <span class="form-text" style="color:red !important;display:none;" id="plakaalert">Plaka alanı doldurulması zorunludur. En az 10 rakam olmalıdır.</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <label class="label">TC Kimlik No</label>
                            <input class="input--style-4" type="text" id="tckn" name="tckn" maxlength="11">
                            <span class="form-text" style="color:red !important;display:none;" id="tcknalert">TC Kimlik No alanı doldurulması zorunludur. En az 11 rakam olmalıdır.</span>
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-6">
                        <div class="input-group">
                            <label class="label">Ruhsat Seri Kodu </label>
                            <input class="input--style-4" type="email" id="ruhsatSeriKodu" name="ruhsatSeriKodu" maxlength="2">
                            <span class="form-text" style="color:red !important;display:none;" id="ruhsatSeriKodualert">Ruhsat Seri Kodu alanı doldurulması zorunludur. En az 2 rakam olmalıdır.</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <label class="label">Ruhsat Seri No</label>
                            <input class="input--style-4" type="text" id="ruhsatSeriNo" name="ruhsatSeriNo" maxlength="6">
                            <span class="form-text" style="color:red !important;display:none;" id="ruhsatSeriNoalert">Ruhsat Seri No alanı doldurulması zorunludur. En az 6 rakam olmalıdır.</span>
                        </div>
                    </div>
                </div>
                <div class="p-t-15">
                    <button class="btn btn--radius-2 btn--blue" type="button" id="sorgula" onclick="Sorgula()">Sorgula</button>
                </div>
            </form>
        </div>
    </div>
</div>


